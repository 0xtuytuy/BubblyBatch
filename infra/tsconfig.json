{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".sst/platform/config.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".sst",
    "dist"
  ]
}

