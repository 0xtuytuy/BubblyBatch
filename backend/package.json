{
  "name": "kefir-backend",
  "version": "0.1.0",
  "description": "Kefir App Backend - Serverless API for managing kefir batches",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "./start-local.sh",
    "local:start": "./start-local.sh",
    "local:clean": "tsx scripts/reset-local-db.ts --confirm",
    "local:seed": "tsx scripts/seed-dev.ts --local",
    "local:docker": "docker-compose up -d",
    "local:docker:stop": "docker-compose stop",
    "local:docker:down": "docker-compose down",
    "local:setup": "tsx scripts/setup-local-dynamo.ts",
    "local:reset": "tsx scripts/reset-local-db.ts",
    "local:token": "tsx scripts/generate-test-token.ts",
    "local:test": "./scripts/quick-test.sh",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "logs": "serverless logs -f",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.679.0",
    "@aws-sdk/lib-dynamodb": "^3.679.0",
    "@aws-sdk/client-s3": "^3.679.0",
    "@aws-sdk/s3-request-presigner": "^3.679.0",
    "@aws-sdk/client-scheduler": "^3.679.0",
    "zod": "^3.23.8",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^20.11.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.3",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT"
}

